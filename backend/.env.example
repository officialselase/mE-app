# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (SQLite)
# DB_PATH will default to backend/data/portfolio.db if not specified
DB_PATH=./data/portfolio.db

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Email Configuration (for future use)
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM=noreply@yourportfolio.com

# Stripe Configuration (for future use)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Image Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
